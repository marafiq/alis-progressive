@model Alis.Progressive.SandboxApp.Models.LoginViewModel
@{
    ViewData["Title"] = "Sample 2: Form Validation";
}

<h1>Sample 2: Form Validation</h1>
<p><strong>Concept:</strong> Automatic validation with data-val-* attributes (NO manual code needed!)</p>

<form id="loginForm" asp-action="Sample2" asp-controller="Samples" hx-post hx-target="#result" hx-ext="framework">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" />
        <span asp-validation-for="Email" class="field-validation-error"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" class="field-validation-error"></span>
    </div>
    
    <button type="submit">Login</button>
    <div id="result" style="margin-top: 1rem;"></div>
</form>

<div style="margin-top: 2rem; padding: 1rem; background: #f0f0f0; border-radius: 4px;">
    <h4>How it works:</h4>
    <ol>
        <li>Server renders <code>data-val-*</code> attributes (from .NET DataAnnotations via <code>asp-for</code>)</li>
        <li>Core bundle automatically attaches validation on page load</li>
        <li>Validates on blur and before submit</li>
        <li>Hidden fields are automatically skipped</li>
        <li>Zero manual validation code required!</li>
    </ol>
</div>

